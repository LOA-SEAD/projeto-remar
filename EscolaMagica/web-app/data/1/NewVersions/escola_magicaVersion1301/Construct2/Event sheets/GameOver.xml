<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>GameOver</name>
    <events>
        <comment>Este layout ee exibido quando o jogador chega a 0% de vida atraves de qualquer tipo de dano (inimigos, respostas erradas, quedas, etc).&#x0D;&#x0A;EE somado 1 a variavel NumReprov a fim de indicar ao sistema que o jogador teve pelo menos um GameOver.&#x0D;&#x0A;O layout GameOver ee destruido apos o pressionamento de qualquer botao do teclado (a entrada do teclado so ee considerada tres segundos apos a exibicao deste mesmo).</comment>
        <event-block>
            <conditions>
                <condition id="-2" name="On start of layout" type="System" />
            </conditions>
            <actions>
                <action id="6" name="Stop" type="Audio">
                    <param id="0" name="Tag">&quot;FaseA&quot;</param>
                </action>
                <action id="6" name="Stop" type="Audio">
                    <param id="0" name="Tag">&quot;FaseB&quot;</param>
                </action>
                <action id="6" name="Stop" type="Audio">
                    <param id="0" name="Tag">&quot;FaseC&quot;</param>
                </action>
                <action id="6" name="Stop" type="Audio">
                    <param id="0" name="Tag">&quot;Pergunta&quot;</param>
                </action>
                <action id="-10" name="Add to" type="System">
                    <param id="0" name="Variable">NumReprov</param>
                    <param id="1" name="Value">1</param>
                </action>
                <action id="5" name="Set frame" type="btnEditarSom">
                    <param id="0" name="Frame number">Volume = -20 ? 2 : 0</param>
                </action>
                <action id="0" name="Play" type="Audio">
                    <param id="0" name="Audio file">Fim</param>
                    <param id="2" name="Loop">1</param>
                    <param id="3" name="Volume">Volume</param>
                    <param id="1" name="Tag (optional)">&quot;Fim&quot;</param>
                </action>
                <action behavior="Fade" id="0" name="Restart fade" type="txtPontuacao" />
                <action id="-16" name="Wait" type="System">
                    <param id="0" name="Seconds">3</param>
                </action>
                <action id="1" name="Append text" type="txtPontuacao">
                    <param id="0" name="Text">&quot;&#x0D;&#x0A;Pressione qualquer tecla para continuar...&quot;</param>
                </action>
                <action behavior="Fade" id="0" name="Restart fade" type="txtPontuacao" />
                <action id="-12" name="Set group active" type="System">
                    <param id="0" name="Group name">&quot;ProcegueJogo&quot;</param>
                    <param id="1" name="State">1</param>
                </action>
            </actions>
        </event-block>
        <event-group description="Usuario pressiona qualquer tecla para voltar a introducao do jogo" inactive="1" title="ProcegueJogo">
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="1" name="On any key pressed" type="Keyboard" />
                    </conditions>
                    <actions>
                        <action id="-12" name="Set group active" type="System">
                            <param id="0" name="Group name">&quot;ProcegueJogo&quot;</param>
                            <param id="1" name="State">0</param>
                        </action>
                        <action id="6" name="Stop" type="Audio">
                            <param id="0" name="Tag">&quot;Fim&quot;</param>
                        </action>
                        <action id="-9" name="Set value" type="System">
                            <param id="0" name="Variable">LayoutAnterior</param>
                            <param id="1" name="Value">&quot;GameOver&quot;</param>
                        </action>
                        <action id="-2" name="Go to layout" type="System">
                            <param id="0" name="Layout">Inicio</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-group>
        <event-group description="Permite ao jogador alterar o volume do jogo." title="EventosSom">
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="3" name="On key released" type="Keyboard">
                            <param id="0" name="Key">77 (M)</param>
                        </condition>
                    </conditions>
                    <actions />
                    <sub-events>
                        <event-block>
                            <conditions>
                                <condition id="-14" name="Compare variable" type="System">
                                    <param id="0" name="Variable">Volume</param>
                                    <param id="1" name="Comparison">0</param>
                                    <param id="2" name="Value">-20</param>
                                </condition>
                            </conditions>
                            <actions>
                                <action id="5" name="Set frame" type="btnEditarSom">
                                    <param id="0" name="Frame number">0</param>
                                </action>
                                <action id="-9" name="Set value" type="System">
                                    <param id="0" name="Variable">Volume</param>
                                    <param id="1" name="Value">0</param>
                                </action>
                                <action id="8" name="Set silent" type="Audio">
                                    <param id="0" name="Mode">1</param>
                                </action>
                                <action id="3" name="Set volume" type="Audio">
                                    <param id="0" name="Tag">&quot;FaseA&quot;</param>
                                    <param id="1" name="dB">Volume</param>
                                </action>
                                <action id="3" name="Set volume" type="Audio">
                                    <param id="0" name="Tag">&quot;Selecao&quot;</param>
                                    <param id="1" name="dB">Volume</param>
                                </action>
                                <action id="3" name="Set volume" type="Audio">
                                    <param id="0" name="Tag">&quot;Pergunta&quot;</param>
                                    <param id="1" name="dB">Volume</param>
                                </action>
                                <action id="3" name="Set volume" type="Audio">
                                    <param id="0" name="Tag">&quot;Fim&quot;</param>
                                    <param id="1" name="dB">Volume</param>
                                </action>
                            </actions>
                        </event-block>
                        <event-block>
                            <conditions>
                                <condition id="-22" name="Else" type="System" />
                            </conditions>
                            <actions>
                                <action id="5" name="Set frame" type="btnEditarSom">
                                    <param id="0" name="Frame number">2</param>
                                </action>
                                <action id="-15" name="Set visible" type="cursorSom">
                                    <param id="0" name="Visibility">0</param>
                                </action>
                                <action id="-9" name="Set value" type="System">
                                    <param id="0" name="Variable">Volume</param>
                                    <param id="1" name="Value">-20</param>
                                </action>
                                <action id="8" name="Set silent" type="Audio">
                                    <param id="0" name="Mode">0</param>
                                </action>
                            </actions>
                        </event-block>
                    </sub-events>
                </event-block>
                <comment>[Mouse.X -btnEditarSom.X +btnEditarSom.Width] é o local relativo do clique do mouse sobre a barra de som, indo de 0 à btnEditarSom.Width. Através de uma regra de três, compactamos linearmente este valor num intervalo de 0 à 20 e posteriormente subtraímos por 20. Ao final, teremos um valor de -20 à 0, que é o intervalo válido para o componente audio.</comment>
                <event-block>
                    <conditions>
                        <condition id="6" name="On object clicked" type="Mouse">
                            <param id="0" name="Mouse button">0</param>
                            <param id="1" name="Click type">0</param>
                            <param id="2" name="Object clicked">btnEditarSom</param>
                        </condition>
                        <condition id="3" name="Compare frame" type="btnEditarSom">
                            <param id="0" name="Comparison">0</param>
                            <param id="1" name="Number">1</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-9" name="Set value" type="System">
                            <param id="0" name="Variable">Volume</param>
                            <param id="1" name="Value">20*(Mouse.X -btnEditarSom.X +btnEditarSom.Width)/btnEditarSom.Width -20</param>
                        </action>
                        <action id="-3" name="Set position" type="cursorSom">
                            <param id="0" name="X">Mouse.X</param>
                            <param id="1" name="Y">cursorSom.Y</param>
                        </action>
                        <action id="3" name="Set volume" type="Audio">
                            <param id="0" name="Tag">&quot;FaseA&quot;</param>
                            <param id="1" name="dB">Volume</param>
                        </action>
                        <action id="3" name="Set volume" type="Audio">
                            <param id="0" name="Tag">&quot;Selecao&quot;</param>
                            <param id="1" name="dB">Volume</param>
                        </action>
                        <action id="3" name="Set volume" type="Audio">
                            <param id="0" name="Tag">&quot;Pergunta&quot;</param>
                            <param id="1" name="dB">Volume</param>
                        </action>
                        <action id="3" name="Set volume" type="Audio">
                            <param id="0" name="Tag">&quot;Fim&quot;</param>
                            <param id="1" name="dB">Volume</param>
                        </action>
                    </actions>
                </event-block>
                <event-block any="1">
                    <conditions>
                        <condition id="3" name="Compare frame" type="btnEditarSom">
                            <param id="0" name="Comparison">0</param>
                            <param id="1" name="Number">0</param>
                        </condition>
                        <condition id="3" name="Compare frame" type="btnEditarSom">
                            <param id="0" name="Comparison">0</param>
                            <param id="1" name="Number">1</param>
                        </condition>
                    </conditions>
                    <actions />
                    <sub-events>
                        <event-block>
                            <conditions>
                                <condition id="7" name="Cursor is over object" type="Mouse">
                                    <param id="0" name="Object">btnEditarSom</param>
                                </condition>
                            </conditions>
                            <actions>
                                <action id="5" name="Set frame" type="btnEditarSom">
                                    <param id="0" name="Frame number">1</param>
                                </action>
                                <action id="-15" name="Set visible" type="cursorSom">
                                    <param id="0" name="Visibility">1</param>
                                </action>
                                <action id="0" name="Set cursor style" type="Mouse">
                                    <param id="0" name="Cursor style">1</param>
                                </action>
                            </actions>
                        </event-block>
                        <event-block>
                            <conditions>
                                <condition id="-22" name="Else" type="System" />
                            </conditions>
                            <actions>
                                <action id="5" name="Set frame" type="btnEditarSom">
                                    <param id="0" name="Frame number">0</param>
                                </action>
                                <action id="0" name="Set cursor style" type="Mouse">
                                    <param id="0" name="Cursor style">0</param>
                                </action>
                                <action id="-15" name="Set visible" type="cursorSom">
                                    <param id="0" name="Visibility">0</param>
                                </action>
                            </actions>
                        </event-block>
                    </sub-events>
                </event-block>
            </sub-events>
        </event-group>
    </events>
</c2eventsheet>
